---
layout: "layouts/home.njk"
---

<hgroup>
  <h1>{{ title }}</h1>
  <p>
    <time class="postlist-date" datetime="{{ page.date | htmlDateString }}"
      >{{ page.date | readableDate("LLLL dd yyyy") }}</time
    >
    <span aria-hidden="true">|</span>
    <span class="postlist-item-tags">
      Tags:
      {% for tag in tags | filterTagList %}
        <a href="/tags/{{ tag | slug }}/" class="postlist-tag">{{ tag }}</a>
      {% endfor %}
    </span>
  </p>
</hgroup>

